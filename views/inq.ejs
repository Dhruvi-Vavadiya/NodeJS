<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(()=>{
            $("#button2").click(()=>{
                $.ajax({
                    method : "POST",
                    url : "/inq",
                    data : {
                        fname : $("#fname").val(),
                        lname : $("#lname").val()
                    },
                    success :(data)=>{
                        $("#errDiv").html("");
                        $("#resultDiv").html(data);
                    },
                    error : (res)=>{
                        $("#resultDiv").html("");
                        const errors = res.responseJSON.errors;
                        let errorHtml = "<ul>";
                        errors.forEach((error) => {
                            errorHtml += `<li>${error.msg}</li>`;
                        });
                        errorHtml += "</ul>";
                        $("#errDiv").html(errorHtml);
                    }
                })
            })
        })
        </script>

</head>
<body>
    <h1> Inqur Form Page</h1>
    <div id="errDiv" style="color: red;"></div>
     <form action="/inq">
        Fname :-<input type="text" name="fname" id="fname" ><br/><br/>
        Lname :-<input type="text" name="lname" id="lname" ><br/>
  <br/>
        <input type="button" value="Submit_Inq" id="button2" name="submit2">

        
    </form>
    <div id="resultDiv" style="color: green;"></div>
</body>
</html>